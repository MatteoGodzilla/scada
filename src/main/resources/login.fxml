<Stage resizable="false" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scada.gui.Login">
    <scene>
        <Scene>
            <AnchorPane prefHeight="310.0" prefWidth="250.0">
            <children>
               <ComboBox fx:id="type" layoutX="40.0" layoutY="105.0" prefHeight="26.0" prefWidth="160.0" promptText="Seleziona una mansione" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="100.0" />
               <Label alignment="CENTER" text="SCADA" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                  <font>
                     <Font name="System Bold" size="36.0" />
                  </font>
               </Label>
               <TextField fx:id="username" layoutX="14.0" layoutY="126.0" promptText="username" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="126.0" />
               <PasswordField fx:id="password" layoutX="14.0" layoutY="152.0" promptText="password" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="152.0" />
               <Button fx:id="button" layoutX="99.0" layoutY="200.0" mnemonicParsing="false" onAction="#submit" text="Login" AnchorPane.leftAnchor="28.0" AnchorPane.rightAnchor="28.0" AnchorPane.topAnchor="200.0" />
               <Label fx:id="error" layoutX="111.0" layoutY="281.0" textAlignment="CENTER" textFill="RED" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" />
               <Hyperlink alignment="CENTER" layoutX="92.0" layoutY="234.0" onAction="#openSignup" text="Apri Registrazione" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" />
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
